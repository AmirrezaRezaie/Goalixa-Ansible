version: "3.8"

services:
  grafana:
    image: "{{ grafana_image }}"
    environment:
      GF_SECURITY_ADMIN_USER: "{{ grafana_admin_user }}"
      GF_SECURITY_ADMIN_PASSWORD: "{{ grafana_admin_password }}"
    volumes:
      - "grafana_data:/var/lib/grafana"
      - "{{ monitoring_dest }}/provisioning:/etc/grafana/provisioning:ro"
    networks:
      - "{{ monitoring_network }}"
    ports:
      - "3000:3000"
    deploy:
      replicas: 1

volumes:
  grafana_data:

networks:
  {{ monitoring_network }}:
    external: true
